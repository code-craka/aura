{
  "name": "@project-aura/cli-tools",
  "version": "0.1.0",
  "description": "CLI tools package for Project Aura - command-line utilities for development, deployment, and maintenance",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "aura": "./dist/cli.js",
    "project-aura": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "build:prod": "tsup --minify",
    "dev": "tsup --watch",
    "dev:full": "tsup --watch",
    "test": "vitest",
    "test:unit": "vitest",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:e2e": "vitest --config vitest.e2e.config.ts",
    "test:coverage": "vitest --coverage",
    "test:performance": "vitest --config vitest.performance.config.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "cli",
    "command-line",
    "tools",
    "development",
    "deployment",
    "automation"
  ],
  "dependencies": {
    "@project-aura/shared-utils": "file:../shared-utils",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.9.4",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/project-aura.git",
    "directory": "packages/cli-tools"
  },
  "bugs": {
    "url": "https://github.com/your-org/project-aura/issues"
  },
  "homepage": "https://github.com/your-org/project-aura/tree/main/packages/cli-tools#readme"
}
